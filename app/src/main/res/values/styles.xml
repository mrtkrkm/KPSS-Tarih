<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus -->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/dark_blue_gray_800</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/dark_blue_gray_800</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/dark_blue_gray_800</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@android:color/white</item>

        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#009688</item>

    </style>

    <style name="Theme.MyThemeBottom" parent="AppTheme">
        <!-- item name="colorPrimary">@android:color/white</item -->
    </style>

    <style name="MyAlertDialog" parent="MaterialDrawerBaseTheme.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.ContactActivity.Toolbar.BackArrow" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

</resources>
