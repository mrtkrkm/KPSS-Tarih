<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/background_gray"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="muratk.mktarih.Activities.GameOverActivity">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_blue_gray_800">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/dark_blue_gray_900">
            <TextView
                android:id="@+id/txt_top_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yanlış Cevap"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_bottom_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:text="Üzgünüz Yanlış Cevap Verdiniz."/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_center"
        android:layout_below="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/round_button_dark_grey_blue"
        >
        <TextView
            android:id="@+id/txt_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Puanınız : 50"/>
        <TextView
            android:id="@+id/txt_highscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="En Yüksek Puanınız : 50"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#999"
            android:background="@color/black"
            android:padding="10dp"
            android:text="Doğru cevabı görebilmek için aşağıdaki reklama tıklayınız."/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_play_again"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:background="@drawable/round_button_green"
                android:text="Play"
                android:textAllCaps="false"
                android:onClick="PlayAgain"
                android:layout_gravity="left|center_vertical"/>
            <Button
                android:id="@+id/btn_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:background="@drawable/round_button_red"
                android:text="Home"
                android:textAllCaps="false"
                android:onClick="GoHome"
                android:layout_gravity="center_horizontal|center_vertical"/>
            <Button
                android:id="@+id/btn_rate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:layout_gravity="right|center_vertical"
                android:textAllCaps="false"
                android:text="Rate"
                android:onClick="RateUs"
                android:background="@drawable/round_button" />
        </FrameLayout>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_game_over">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
